
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

 

<div ng-app="myApp" ng-controller="myCtrl">
    <form style="padding: 100px">
        <div class="form-group">
            <label for="inputAddress2">Name</label>
            <input ng-model="Name" type="text" class="form-control" placeholder="" required>
        </div>
        <div class="form-group">
            <label for="inputAddress2">Username</label>
            <input ng-model="Username" type="text" class="form-control" placeholder="" required>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input type="email" ng-model="Email" name="uEmail" required />
                @*<input ng-model="Email" class="form-control" placeholder="Email">*@
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Password</label>
                <input ng-model="Password" placeholder="Password">
            </div>
        </div>


        <div class="form-row">

            <div class="form-group col-md-4">
                <label for="inputState">Type</label>
                <select ng-model="singleSelect" id="inputState" class="form-control" required>

                    <option selected>Manager</option>
                    <option>Assistant Manager</option>
                </select>
            </div>

        </div>

        <button type="submit" class="btn btn-primary" ng-click="showMsg(message)"
                ng-disabled="myForm.Username.$dirty && myForm.Username.$invalid ||
  myForm.Password.$dirty && myForm.Password.$invalid"
                >Sign Up</button>
        <button type="submit" class="btn btn-primary" ng-click="Signincall()">Login</button>
    </form>

    <br>
    Full Name: {{Email + " " + Password}}
    <br>
    Full Name: {{Address + " " + Address2}}
    <br>
    Full Name: {{City + " "}}


</div>


<script src="~/Scripts/AngularController/HomeController.js"></script>